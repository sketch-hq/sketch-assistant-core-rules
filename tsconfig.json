{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "./dist/cjs",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es6"
  },
  "include": ["./rules/**/*.ts", "./*.ts"],
  "exclude": ["node_modules", "dist"]
}
