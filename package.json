{
  "name": "@sketch-hq/sketch-lint-ruleset-core",
  "description": "The core sketch-lint ruleset",
  "version": "1.0.0-alpha.12",
  "license": "MIT",
  "repository": "github:sketch-hq/sketch-lint-ruleset-core",
  "types": "dist/cjs/index",
  "main": "dist/cjs/index",
  "sketch": "dist/sketch/index",
  "keywords": [
    "sketch",
    "sketch files",
    "sketch-lint-ruleset",
    "linting",
    "lint",
    "ruleset",
    "design linting"
  ],
  "scripts": {
    "build:node:types": "tsc --outDir dist/cjs --emitDeclarationOnly",
    "build:node": "babel src --out-dir dist/cjs --extensions \".js,.ts\"",
    "build:sketch": "yarn webpack",
    "build": "yarn clean && yarn i18n:compile && yarn build:node && yarn build:node:types && yarn build:sketch",
    "clean": "rm -rf ./dist",
    "commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "format-check": "prettier --check **/*.{ts,md,json}",
    "i18n:compile": "lingui compile",
    "i18n:extract": "lingui extract --clean --overwrite",
    "package-tarball": "yarn build && yarn pack --filename=sketch-lint-ruleset-core-$(node -p -e \"require('./package.json').version\").tgz",
    "prepublishOnly": "yarn build",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version --no-verify",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@lingui/core": "2.9.1"
  },
  "peerDependencies": {
    "@sketch-hq/sketch-lint-core": "*"
  },
  "devDependencies": {
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@lingui/cli": "2.9.1",
    "@lingui/macro": "2.9.1",
    "@sketch-hq/sketch-lint-core": "file:./tarballs/sketch-lint-core-1.0.0-alpha.9.tgz",
    "@types/jest": "24.0.22",
    "@types/node": "12.12.7",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-macros": "2.8.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "standard-version": "7.0.0",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn build"
    }
  }
}
