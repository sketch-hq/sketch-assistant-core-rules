{
  "name": "@sketch-hq/sketch-lint-ruleset-core",
  "description": "The core sketch-lint ruleset",
  "version": "1.0.0-alpha.17",
  "license": "MIT",
  "repository": "github:sketch-hq/sketch-lint-ruleset-core",
  "types": "dist/cjs/index",
  "main": "dist/cjs/index",
  "sketch": "dist/sketch/index",
  "keywords": [
    "sketch",
    "sketch files",
    "sketch-lint-ruleset",
    "linting",
    "lint",
    "ruleset",
    "design linting"
  ],
  "scripts": {
    "build:node:types": "tsc --outDir dist/cjs --emitDeclarationOnly",
    "build:node": "babel src --out-dir dist/cjs --extensions '.js,.ts' --ignore 'src/global.d.ts','**/__tests__','**/*.test.ts','*.test.ts'",
    "build:sketch": "yarn webpack",
    "build": "yarn clean && yarn i18n:compile && yarn build:node && yarn build:node:types && yarn build:sketch",
    "clean": "rm -rf ./dist",
    "format-check": "yarn prettier --check '{,**/}*.{ts,js,md,json}'",
    "i18n:compile": "lingui compile",
    "i18n:extract": "lingui extract --clean",
    "package-tarball": "yarn build && yarn pack --filename=sketch-lint-ruleset-core-$(node -p -e \"require('./package.json').version\").tgz",
    "prepublishOnly": "yarn build",
    "release": "standard-version",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "update-yarn": "yarn policies set-version"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@lingui/core": "2.9.1"
  },
  "peerDependencies": {
    "@sketch-hq/sketch-lint-core": "*"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-typescript": "7.8.3",
    "@lingui/cli": "2.9.1",
    "@lingui/macro": "2.9.1",
    "@sketch-hq/sketch-lint-core": "file:./tarballs/sketch-lint-core-1.0.0-alpha.13.tgz",
    "@types/jest": "25.1.2",
    "@types/node": "13.7.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "25.1.0",
    "babel-loader": "8.0.6",
    "babel-plugin-macros": "2.8.0",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "standard-version": "7.1.0",
    "typescript": "3.7.5",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn build"
    }
  }
}
